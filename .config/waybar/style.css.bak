* {
	transition: none;
	transition: none;
}

#waybar {
    font-family: 'JetBrains Mono', sans-serif;
	font-size: 1em;
	font-weight: 400;
	color: @base04;
	background: rgba(0,0,0,0.5); 
    
}

tooltip {
    background: #1e1e2e;
    border-radius: 10px;
    border-width: 2px;
    border-style: solid;
    border-color: #11111b;
}

#workspaces button {
    margin: 4px 0;
	padding: 0 4px;
	color: @base05;
}

#workspaces button.active {
    color: black;
	border-radius: 4px;
	background-color: #ffffff;
}

#workspaces button.visible {
}


